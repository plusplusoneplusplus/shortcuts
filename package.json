{
  "name": "shortcuts",
  "displayName": "Shortcuts",
  "description": "A VSCode extension for managing shortcuts and quick actions",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/shortcuts.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:shortcutsPanel",
    "onCommand:shortcuts.addFolder"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "id": "shortcutsPanel",
          "name": "Shortcuts",
          "when": "workspaceFolderCount > 0"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "shortcutsPanel",
        "contents": "No shortcuts configured yet.\n[Add Folder Shortcut](command:shortcuts.addFolder)\nShortcuts allow you to quickly access frequently used folders in your workspace. Click the button above to add your first shortcut.\n\nYou can also:\n• Right-click in this panel to add shortcuts\n• [Open Configuration File](command:shortcuts.openConfiguration) to edit manually\n• Share shortcuts with your team by committing the configuration file",
        "when": "workspaceFolderCount > 0"
      }
    ],
    "commands": [
      {
        "command": "shortcuts.addFolder",
        "title": "Add Folder Shortcut",
        "icon": "$(add)"
      },
      {
        "command": "shortcuts.removeShortcut",
        "title": "Remove Shortcut",
        "icon": "$(remove)"
      },
      {
        "command": "shortcuts.renameShortcut",
        "title": "Rename Shortcut",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "shortcuts.openConfiguration",
        "title": "Open Configuration File",
        "icon": "$(gear)"
      },
      {
        "command": "shortcuts.handleEnterKey",
        "title": "Open/Expand Item"
      },
      {
        "command": "shortcuts.handleSpaceKey",
        "title": "Toggle Expansion"
      },
      {
        "command": "shortcuts.handleHomeKey",
        "title": "Navigate to First Item"
      },
      {
        "command": "shortcuts.handleEndKey",
        "title": "Navigate to Last Item"
      },
      {
        "command": "shortcuts.handleRightArrow",
        "title": "Expand Folder"
      },
      {
        "command": "shortcuts.handleLeftArrow",
        "title": "Collapse Folder"
      },
      {
        "command": "shortcuts.handleF2Key",
        "title": "Rename Shortcut"
      },
      {
        "command": "shortcuts.handleDeleteKey",
        "title": "Delete Shortcut"
      },
      {
        "command": "shortcuts.showKeyboardHelp",
        "title": "Show Keyboard Navigation Help",
        "icon": "$(question)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "shortcuts.addFolder",
          "when": "view == shortcutsPanel",
          "group": "navigation"
        },
        {
          "command": "shortcuts.refresh",
          "when": "view == shortcutsPanel",
          "group": "navigation"
        },
        {
          "command": "shortcuts.openConfiguration",
          "when": "view == shortcutsPanel",
          "group": "navigation"
        },
        {
          "command": "shortcuts.showKeyboardHelp",
          "when": "view == shortcutsPanel",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "shortcuts.removeShortcut",
          "when": "view == shortcutsPanel && viewItem == folder",
          "group": "shortcuts@1"
        },
        {
          "command": "shortcuts.renameShortcut",
          "when": "view == shortcutsPanel && viewItem == folder",
          "group": "shortcuts@2"
        }
      ],
      "view/context": [
        {
          "command": "shortcuts.addFolder",
          "when": "view == shortcutsPanel",
          "group": "shortcuts@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "shortcuts.handleEnterKey",
        "key": "enter",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleSpaceKey",
        "key": "space",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleHomeKey",
        "key": "home",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleEndKey",
        "key": "end",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleRightArrow",
        "key": "right",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleLeftArrow",
        "key": "left",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleF2Key",
        "key": "f2",
        "when": "focusedView == shortcutsPanel"
      },
      {
        "command": "shortcuts.handleDeleteKey",
        "key": "delete",
        "when": "focusedView == shortcutsPanel"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}