{
  "name": "shortcuts",
  "displayName": "Shortcuts",
  "description": "A VSCode extension for managing shortcuts and quick actions",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/shortcuts.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Keymaps",
    "Productivity"
  ],
  "activationEvents": [
    "onView:shortcutsPhysical",
    "onView:shortcutsLogical",
    "onCommand:shortcuts.addFolder",
    "onCommand:shortcuts.createLogicalGroup",
    "onViewContainer:shortcuts"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "shortcuts",
          "title": "Shortcuts",
          "icon": "./resources/icons/shortcuts.svg"
        }
      ]
    },
    "views": {
      "shortcuts": [
        {
          "id": "shortcutsPhysical",
          "name": "Physical Folders",
          "when": "true"
        },
        {
          "id": "shortcutsLogical",
          "name": "Logical Groups",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "shortcutsPhysical",
        "contents": "üìÅ **Physical Folders**\n\n[Add Folder Shortcut](command:shortcuts.addFolder)\n\nQuick access to actual folders on your filesystem.\n\n**Actions:**\n‚Ä¢ Add existing folders\n‚Ä¢ Navigate to folder locations\n‚Ä¢ Open folders in explorer"
      },
      {
        "view": "shortcutsLogical",
        "contents": "üè∑Ô∏è **Logical Groups**\n\n[Create New Group](command:shortcuts.createLogicalGroup)\n\nOrganize shortcuts into custom categories.\n\n**Actions:**\n‚Ä¢ Create custom groups\n‚Ä¢ Add shortcuts to groups\n‚Ä¢ Organize by project, type, or workflow"
      }
    ],
    "commands": [
      {
        "command": "shortcuts.addFolder",
        "title": "Add Folder Shortcut",
        "icon": "$(add)"
      },
      {
        "command": "shortcuts.removeShortcut",
        "title": "Remove Shortcut",
        "icon": "$(remove)"
      },
      {
        "command": "shortcuts.renameShortcut",
        "title": "Rename Shortcut",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "shortcuts.openConfiguration",
        "title": "Open Configuration File",
        "icon": "$(gear)"
      },
      {
        "command": "shortcuts.showKeyboardHelp",
        "title": "Show Keyboard Navigation Help",
        "icon": "$(question)"
      },
      {
        "command": "shortcuts.createLogicalGroup",
        "title": "Create Logical Group",
        "icon": "$(folder)"
      },
      {
        "command": "shortcuts.addToLogicalGroup",
        "title": "Add to Group",
        "icon": "$(add)"
      },
      {
        "command": "shortcuts.removeFromLogicalGroup",
        "title": "Remove from Group",
        "icon": "$(remove)"
      },
      {
        "command": "shortcuts.renameLogicalGroup",
        "title": "Rename Group",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.deleteLogicalGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "shortcuts.addFolder",
          "when": "view == shortcutsPhysical",
          "group": "navigation"
        },
        {
          "command": "shortcuts.createLogicalGroup",
          "when": "view == shortcutsLogical",
          "group": "navigation"
        },
        {
          "command": "shortcuts.refresh",
          "when": "view == shortcutsPhysical || view == shortcutsLogical",
          "group": "navigation"
        },
        {
          "command": "shortcuts.openConfiguration",
          "when": "view == shortcutsPhysical || view == shortcutsLogical",
          "group": "navigation"
        },
        {
          "command": "shortcuts.showKeyboardHelp",
          "when": "view == shortcutsPhysical || view == shortcutsLogical",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "shortcuts.removeShortcut",
          "when": "view == shortcutsPhysical && viewItem == folder",
          "group": "shortcuts@1"
        },
        {
          "command": "shortcuts.renameShortcut",
          "when": "view == shortcutsPhysical && viewItem == folder",
          "group": "shortcuts@2"
        },
        {
          "command": "shortcuts.addToLogicalGroup",
          "when": "view == shortcutsLogical && viewItem == logicalGroup",
          "group": "logicalGroup@1"
        },
        {
          "command": "shortcuts.renameLogicalGroup",
          "when": "view == shortcutsLogical && viewItem == logicalGroup",
          "group": "logicalGroup@2"
        },
        {
          "command": "shortcuts.deleteLogicalGroup",
          "when": "view == shortcutsLogical && viewItem == logicalGroup",
          "group": "logicalGroup@3"
        },
        {
          "command": "shortcuts.removeFromLogicalGroup",
          "when": "view == shortcutsLogical && (viewItem == logicalGroupItem_folder || viewItem == logicalGroupItem_file)",
          "group": "logicalGroupItem@1"
        }
      ],
      "view/context": [
        {
          "command": "shortcuts.addFolder",
          "when": "view == shortcutsPhysical",
          "group": "shortcuts@1"
        },
        {
          "command": "shortcuts.createLogicalGroup",
          "when": "view == shortcutsLogical",
          "group": "shortcuts@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "shortcuts.physical.handleEnterKey",
        "key": "enter",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleSpaceKey",
        "key": "space",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleHomeKey",
        "key": "home",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleEndKey",
        "key": "end",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleRightArrow",
        "key": "right",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleLeftArrow",
        "key": "left",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleF2Key",
        "key": "f2",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.physical.handleDeleteKey",
        "key": "delete",
        "when": "focusedView == shortcutsPhysical"
      },
      {
        "command": "shortcuts.logical.handleEnterKey",
        "key": "enter",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleSpaceKey",
        "key": "space",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleHomeKey",
        "key": "home",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleEndKey",
        "key": "end",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleRightArrow",
        "key": "right",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleLeftArrow",
        "key": "left",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleF2Key",
        "key": "f2",
        "when": "focusedView == shortcutsLogical"
      },
      {
        "command": "shortcuts.logical.handleDeleteKey",
        "key": "delete",
        "when": "focusedView == shortcutsLogical"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}