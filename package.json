{
  "name": "workspace-shortcuts",
  "displayName": "Workspace Shortcuts",
  "description": "Organize your workspace with customizable folder shortcuts and logical groups. Quick access to frequently used directories and files with split-view navigation.",
  "version": "2.7.5",
  "publisher": "yihengtao",
  "repository": {
    "type": "git",
    "url": "https://github.com/plusplusoneplusplus/shortcuts.git"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "keywords": [
    "shortcuts",
    "folders",
    "navigation",
    "productivity",
    "workspace",
    "quick access",
    "tree view",
    "file management"
  ],
  "icon": "resources/icons/shortcuts.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:shortcutsView",
    "onCommand:shortcuts.createLogicalGroup",
    "onViewContainer:shortcuts"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "shortcuts",
          "title": "Shortcuts",
          "icon": "./resources/icons/shortcuts.svg"
        }
      ]
    },
    "views": {
      "shortcuts": [
        {
          "id": "globalNotesView",
          "name": "Global Notes",
          "when": "true"
        },
        {
          "id": "shortcutsView",
          "name": "Groups",
          "when": "true"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "globalNotesView",
        "contents": "üìù **Global Notes**\n\n[Create First Note](command:shortcuts.createGlobalNote)\n\nQuick access notes available everywhere.\n\n**Features:**\n‚Ä¢ Create notes accessible from any workspace\n‚Ä¢ No group assignment needed\n‚Ä¢ Perfect for quick ideas and reminders\n‚Ä¢ Automatically saved"
      },
      {
        "view": "shortcutsView",
        "contents": "üìÅ **Shortcuts Groups**\n\n[Create New Group](command:shortcuts.createLogicalGroup)\n\nOrganize your workspace with custom groups.\n\n**Actions:**\n‚Ä¢ Create groups to organize files and folders\n‚Ä¢ Add files and folders to groups\n‚Ä¢ Organize by project, type, or workflow\n‚Ä¢ Quick access to frequently used locations"
      }
    ],
    "configuration": {
      "title": "Workspace Shortcuts",
      "properties": {
        "workspaceShortcuts.openMarkdownInPreview": {
          "type": "boolean",
          "default": false,
          "description": "Automatically open Markdown (.md) files in preview mode instead of edit mode when creating or opening from shortcuts"
        },
        "workspaceShortcuts.sync.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable cloud synchronization of shortcuts configuration"
        },
        "workspaceShortcuts.sync.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync configuration changes to cloud"
        },
        "workspaceShortcuts.sync.syncInterval": {
          "type": "number",
          "default": 300,
          "description": "Periodic sync interval in seconds (0 to disable periodic sync)"
        },
        "workspaceShortcuts.sync.provider": {
          "type": "string",
          "default": "vscode",
          "enum": [
            "vscode",
            "azure"
          ],
          "enumDescriptions": [
            "Use VSCode's built-in Settings Sync (syncs with your Microsoft/GitHub account)",
            "Use Azure Blob Storage (requires container and account configuration)"
          ],
          "description": "Select the cloud sync provider to use"
        },
        "workspaceShortcuts.sync.vscode.scope": {
          "type": "string",
          "default": "global",
          "enum": [
            "global",
            "workspace"
          ],
          "enumDescriptions": [
            "Sync across all workspaces using global state",
            "Sync only within this workspace"
          ],
          "description": "VSCode Sync: Scope for synchronization"
        },
        "workspaceShortcuts.sync.azure.container": {
          "type": "string",
          "default": "",
          "description": "Azure Blob Storage: Container name for storing shortcuts configuration"
        },
        "workspaceShortcuts.sync.azure.accountName": {
          "type": "string",
          "default": "",
          "description": "Azure Blob Storage: Storage account name"
        }
      }
    },
    "commands": [
      {
        "command": "shortcuts.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "shortcuts.openConfiguration",
        "title": "Open Configuration File",
        "icon": "$(gear)"
      },
      {
        "command": "shortcuts.showKeyboardHelp",
        "title": "Show Keyboard Navigation Help",
        "icon": "$(question)"
      },
      {
        "command": "shortcuts.createLogicalGroup",
        "title": "Create Logical Group",
        "icon": "$(folder)"
      },
      {
        "command": "shortcuts.addToLogicalGroup",
        "title": "Add to Group",
        "icon": "$(add)"
      },
      {
        "command": "shortcuts.addFilesToLogicalGroup",
        "title": "Add Files to Group",
        "icon": "$(add)"
      },
      {
        "command": "shortcuts.addFoldersToLogicalGroup",
        "title": "Add Folders to Group",
        "icon": "$(add)"
      },
      {
        "command": "shortcuts.removeFromLogicalGroup",
        "title": "Remove from Group",
        "icon": "$(remove)"
      },
      {
        "command": "shortcuts.renameLogicalGroup",
        "title": "Rename Group",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.deleteLogicalGroup",
        "title": "Delete Group",
        "icon": "$(trash)"
      },
      {
        "command": "shortcuts.createNestedLogicalGroup",
        "title": "Create Subgroup",
        "icon": "$(new-folder)"
      },
      {
        "command": "shortcuts.copyRelativePath",
        "title": "Copy Relative Path",
        "icon": "$(copy)"
      },
      {
        "command": "shortcuts.copyAbsolutePath",
        "title": "Copy Absolute Path",
        "icon": "$(copy)"
      },
      {
        "command": "shortcuts.undoMove",
        "title": "Undo Last Move",
        "icon": "$(discard)"
      },
      {
        "command": "shortcuts.createFileInLogicalGroup",
        "title": "Create File",
        "icon": "$(new-file)"
      },
      {
        "command": "shortcuts.createFolderInLogicalGroup",
        "title": "Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "shortcuts.createFileInFolder",
        "title": "Create File",
        "icon": "$(new-file)"
      },
      {
        "command": "shortcuts.createFolderInFolder",
        "title": "Create Folder",
        "icon": "$(new-folder)"
      },
      {
        "command": "shortcuts.revealInExplorer",
        "title": "Reveal in Explorer",
        "icon": "$(go-to-file)"
      },
      {
        "command": "shortcuts.openInTerminal",
        "title": "Open in Integrated Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "shortcuts.executeCommandItem",
        "title": "Execute Command",
        "icon": "$(run)"
      },
      {
        "command": "shortcuts.executeTaskItem",
        "title": "Run Task",
        "icon": "$(play)"
      },
      {
        "command": "shortcuts.createNote",
        "title": "Create Note",
        "icon": "$(note)"
      },
      {
        "command": "shortcuts.editNote",
        "title": "Edit Note",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.deleteNote",
        "title": "Delete Note",
        "icon": "$(trash)"
      },
      {
        "command": "shortcuts.renameNote",
        "title": "Rename Note",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.createGlobalNote",
        "title": "Create Global Note",
        "icon": "$(note)"
      },
      {
        "command": "shortcuts.editGlobalNote",
        "title": "Edit Global Note",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.deleteGlobalNote",
        "title": "Delete Global Note",
        "icon": "$(trash)"
      },
      {
        "command": "shortcuts.renameGlobalNote",
        "title": "Rename Global Note",
        "icon": "$(edit)"
      },
      {
        "command": "shortcuts.sync.configure",
        "title": "Configure Cloud Sync",
        "icon": "$(cloud)"
      },
      {
        "command": "shortcuts.sync.enable",
        "title": "Enable Cloud Sync",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "shortcuts.sync.disable",
        "title": "Disable Cloud Sync",
        "icon": "$(circle-slash)"
      },
      {
        "command": "shortcuts.sync.now",
        "title": "Sync Now",
        "icon": "$(sync)"
      },
      {
        "command": "shortcuts.sync.status",
        "title": "Show Sync Status",
        "icon": "$(info)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "shortcuts.createGlobalNote",
          "when": "view == globalNotesView",
          "group": "navigation"
        },
        {
          "command": "shortcuts.createLogicalGroup",
          "when": "view == shortcutsView",
          "group": "navigation"
        },
        {
          "command": "shortcuts.refresh",
          "when": "view == shortcutsView",
          "group": "navigation"
        },
        {
          "command": "shortcuts.openConfiguration",
          "when": "view == shortcutsView",
          "group": "navigation"
        },
        {
          "command": "shortcuts.sync.now",
          "when": "view == shortcutsView && config.workspaceShortcuts.sync.enabled",
          "group": "navigation"
        },
        {
          "command": "shortcuts.sync.status",
          "when": "view == shortcutsView && config.workspaceShortcuts.sync.enabled",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "shortcuts.createFileInLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup",
          "group": "logicalGroup@1"
        },
        {
          "command": "shortcuts.createFolderInLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup",
          "group": "logicalGroup@2"
        },
        {
          "command": "shortcuts.createNote",
          "when": "view == shortcutsView && viewItem == logicalGroup",
          "group": "logicalGroup@2.3"
        },
        {
          "command": "shortcuts.createNestedLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup",
          "group": "logicalGroup@2.5"
        },
        {
          "command": "shortcuts.addToLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup && !isWindows",
          "group": "logicalGroup@3"
        },
        {
          "command": "shortcuts.addFilesToLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup && isWindows",
          "group": "logicalGroup@3"
        },
        {
          "command": "shortcuts.addFoldersToLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup && isWindows",
          "group": "logicalGroup@4"
        },
        {
          "command": "shortcuts.renameLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup",
          "group": "logicalGroup@5"
        },
        {
          "command": "shortcuts.deleteLogicalGroup",
          "when": "view == shortcutsView && viewItem == logicalGroup",
          "group": "logicalGroup@6"
        },
        {
          "command": "shortcuts.createFileInFolder",
          "when": "view == shortcutsView && viewItem == logicalGroupItem_folder",
          "group": "logicalGroupItem@1"
        },
        {
          "command": "shortcuts.createFolderInFolder",
          "when": "view == shortcutsView && viewItem == logicalGroupItem_folder",
          "group": "logicalGroupItem@2"
        },
        {
          "command": "shortcuts.removeFromLogicalGroup",
          "when": "view == shortcutsView && (viewItem == logicalGroupItem_folder || viewItem == logicalGroupItem_file)",
          "group": "logicalGroupItem@3"
        },
        {
          "command": "shortcuts.copyRelativePath",
          "when": "view == shortcutsView && (viewItem == logicalGroupItem_folder || viewItem == logicalGroupItem_file)",
          "group": "logicalGroupItem@4"
        },
        {
          "command": "shortcuts.copyAbsolutePath",
          "when": "view == shortcutsView && (viewItem == logicalGroupItem_folder || viewItem == logicalGroupItem_file)",
          "group": "logicalGroupItem@5"
        },
        {
          "command": "shortcuts.revealInExplorer",
          "when": "view == shortcutsView && (viewItem == logicalGroupItem_folder || viewItem == logicalGroupItem_file)",
          "group": "logicalGroupItem@6"
        },
        {
          "command": "shortcuts.openInTerminal",
          "when": "view == shortcutsView && (viewItem == logicalGroupItem_folder || viewItem == logicalGroupItem_file)",
          "group": "logicalGroupItem@7"
        },
        {
          "command": "shortcuts.createFileInFolder",
          "when": "view == shortcutsView && viewItem == folder",
          "group": "folder@1"
        },
        {
          "command": "shortcuts.createFolderInFolder",
          "when": "view == shortcutsView && viewItem == folder",
          "group": "folder@2"
        },
        {
          "command": "shortcuts.copyRelativePath",
          "when": "view == shortcutsView && viewItem == folder",
          "group": "folder@3"
        },
        {
          "command": "shortcuts.copyAbsolutePath",
          "when": "view == shortcutsView && viewItem == folder",
          "group": "folder@4"
        },
        {
          "command": "shortcuts.revealInExplorer",
          "when": "view == shortcutsView && viewItem == folder",
          "group": "folder@5"
        },
        {
          "command": "shortcuts.openInTerminal",
          "when": "view == shortcutsView && viewItem == folder",
          "group": "folder@6"
        },
        {
          "command": "shortcuts.copyRelativePath",
          "when": "view == shortcutsView && viewItem == file",
          "group": "file@1"
        },
        {
          "command": "shortcuts.copyAbsolutePath",
          "when": "view == shortcutsView && viewItem == file",
          "group": "file@2"
        },
        {
          "command": "shortcuts.revealInExplorer",
          "when": "view == shortcutsView && viewItem == file",
          "group": "file@3"
        },
        {
          "command": "shortcuts.openInTerminal",
          "when": "view == shortcutsView && viewItem == file",
          "group": "file@4"
        },
        {
          "command": "shortcuts.executeCommandItem",
          "when": "view == shortcutsView && viewItem == command",
          "group": "command@1"
        },
        {
          "command": "shortcuts.executeTaskItem",
          "when": "view == shortcutsView && viewItem == task",
          "group": "task@1"
        },
        {
          "command": "shortcuts.editNote",
          "when": "view == shortcutsView && viewItem == note",
          "group": "note@1"
        },
        {
          "command": "shortcuts.renameNote",
          "when": "view == shortcutsView && viewItem == note",
          "group": "note@2"
        },
        {
          "command": "shortcuts.deleteNote",
          "when": "view == shortcutsView && viewItem == note",
          "group": "note@3"
        },
        {
          "command": "shortcuts.editGlobalNote",
          "when": "view == globalNotesView && viewItem == globalNote",
          "group": "globalNote@1"
        },
        {
          "command": "shortcuts.renameGlobalNote",
          "when": "view == globalNotesView && viewItem == globalNote",
          "group": "globalNote@2"
        },
        {
          "command": "shortcuts.deleteGlobalNote",
          "when": "view == globalNotesView && viewItem == globalNote",
          "group": "globalNote@3"
        }
      ],
      "view/context": [
        {
          "command": "shortcuts.createLogicalGroup",
          "when": "view == shortcutsView",
          "group": "shortcuts@1"
        }
      ]
    },
    "keybindings": [
      {
        "command": "shortcuts.logical.handleEnterKey",
        "key": "enter",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleSpaceKey",
        "key": "space",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleHomeKey",
        "key": "home",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleEndKey",
        "key": "end",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleRightArrow",
        "key": "right",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleLeftArrow",
        "key": "left",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleF2Key",
        "key": "f2",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.logical.handleDeleteKey",
        "key": "delete",
        "when": "focusedView == shortcutsView"
      },
      {
        "command": "shortcuts.undoMove",
        "key": "ctrl+z",
        "mac": "cmd+z",
        "when": "focusedView == shortcutsView"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint && mkdir -p out/test/fixtures && cp -r src/test/fixtures/* out/test/fixtures/",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsce:package": "vsce package",
    "vsce:publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "@vscode/vsce": "^2.15.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "@azure/storage-blob": "^12.17.0",
    "js-yaml": "^4.1.0"
  }
}