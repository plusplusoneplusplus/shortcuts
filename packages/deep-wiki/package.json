{
  "name": "@plusplusoneplusplus/deep-wiki",
  "version": "1.0.8",
  "description": "CLI tool to auto-generate comprehensive wikis for any codebase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "deep-wiki": "./dist/index.js"
  },
  "files": [
    "dist/index.js",
    "dist/index.js.map",
    "dist/server/spa/client/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "cd ../pipeline-core && npm run build",
    "build:client": "node scripts/build-client.mjs",
    "build:copy-client": "node -e \"const fs=require('fs');const p=require('path');const s=p.join('src','server','spa','client','dist');const d=p.join('dist','server','spa','client','dist');fs.mkdirSync(d,{recursive:true});for(const f of fs.readdirSync(s))fs.copyFileSync(p.join(s,f),p.join(d,f))\"",
    "build": "npm run build:client && tsc && npm run build:copy-client",
    "build:bundle": "node esbuild.config.mjs",
    "prepublishOnly": "npm run build:bundle && npm run test:run",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.16",
    "commander": "^12.1.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@plusplusoneplusplus/pipeline-core": "1.0.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "esbuild": "^0.21.5",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
